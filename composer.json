{
    "name": "micro/plugin-http-core",
    "description": "Micro Framework: Lightweight HTTP router",
    "license": "MIT",
    "type": "micro-plugin",
    "authors": [
        {
            "name": "Stanislau Komar",
            "email": "kost@micro-php.net"
        }
    ],
    "require": {
        "micro/autowire": "^2.0",
        "micro/kernel": "^2.0",
        "micro/kernel-boot-configuration": "^2.0",
        "micro/kernel-boot-dependency": "^2.0",
        "micro/kernel-boot-plugin-depended": "^2.0",
        "micro/plugin-locator": "^2.0",
        "symfony/http-foundation": "^6.2 || ^6.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.34"
    },
    "autoload": {
        "psr-4": {
            "Micro\\Plugin\\HttpCore\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
